<!-- homepage -->
<div class="container mt-2">
    <% page.posts.each(function(post){ %>
    <div class="card shadow mb-3">
        <div class="row no-gutters">
            <div class="col-4 col-sm-1">
                <img src="<%= firstimage(post) %>" class="rounded w-100 h-100" alt="Thumbnail [100x100]" style="object-fit:cover">
            </div>
            <div class="col-8 col-sm-11 p-1">
                <!-- title -->
                <h6 class="text-truncate"><%= post.title %></h6>
                <!-- summary -->
                <p class="text-secondary text-truncate mb-1">
                    <%- truncate(strip_html(post.content), {length: 64, omission: '...'}) %>
                </p>
                <!-- date -->
                <span class="text-secondary"><%= date(page.date) %></span>
                <!-- link -->
                <a href="<%- url_for(post.path) %>" class="stretched-link"></a>
            </div>
        </div>
    </div>
    <% }) %>
</div>

<!-- pagination -->
<nav class="mt-2 d-flex justify-content-center">
    <ul class="pagination">
        <%- paginator({
            prev_text: '上一页',
            next_text: '下一页',
            page_class:'page-link m-1',
            prev_class:'page-link m-1',
            next_class:'page-link m-1',
            space_class:'page-link m-1',
            current_class:'page-link active m-1',
        }) %>
    </ul>
</nav>